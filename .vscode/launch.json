    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'geometry-wars'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=geometry-wars",
                    "--package=geometry-wars",
                    "--color=always",
                    "--features=bevy/dynamic_linking",
                ],
                "filter": {
                    "name": "geometry-wars",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": { 
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib",
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'geometry-wars'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=geometry-wars",
                    "--package=geometry-wars"
                ],
                "filter": {
                    "name": "geometry-wars",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}